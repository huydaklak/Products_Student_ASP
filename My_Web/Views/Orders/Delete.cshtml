@model My_Web.Models.Order
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Hủy đơn hàng";
}

<h2>Hủy đơn hàng #@Model.OrderID</h2>

<p>Bạn có chắc muốn hủy đơn hàng này không?</p>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.OrderID" />
    <button type="submit" class="btn btn-danger">Hủy đơn</button>
    <a asp-action="AdminList" class="btn btn-secondary">Quay lại</a>
</form>
