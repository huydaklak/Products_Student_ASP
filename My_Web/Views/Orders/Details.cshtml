@model My_Web.Models.Order
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h2>Chi tiết đơn hàng #@Model.OrderID</h2>

<p><strong>Người đặt:</strong> @Model.User?.FullName</p>
<p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("N0") VNĐ</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>

<h4>Sản phẩm</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product?.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                <td>@(item.Quantity* item.Price).ToString("N0") VNĐ</td>
            </tr>
        }
    </tbody>
</table>
