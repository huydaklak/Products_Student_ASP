@model Category

@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Xóa danh mục";
}

<h2>Bạn có chắc muốn xóa danh mục này?</h2>

<div>
    <strong>@Model.CategoryName</strong>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryID" />
    <button type="submit" class="btn btn-danger mt-2">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Hủy</a>
</form>
