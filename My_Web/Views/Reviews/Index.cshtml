@model List<Review>

@{
    Layout = ViewData["Layout"]?.ToString() ?? "~/Views/Shared/_LayoutUser.cshtml";
    ViewData["Title"] = "Đánh giá sản phẩm";
}

<h2>Danh sách đánh giá</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Người dùng</th>
            <th>Nội dung</th>
            <th>Rating</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Product?.ProductName</td>
                <td>@review.User?.FullName</td>
                <td>@review.Content</td>
                <td>@review.Rating / 5</td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@review.ReviewID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
