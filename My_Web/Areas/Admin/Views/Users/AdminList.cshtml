@model List<My_Web.Models.User>


<h2>Danh sách người dùng</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.UserID">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.UserID" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
