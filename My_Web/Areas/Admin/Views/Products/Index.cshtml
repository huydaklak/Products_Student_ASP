@model List<Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Thêm sản phẩm</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thương hiệu</th>
            <th>Danh mục</th>
            <th>Ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.Quantity</td>
                <td>@item.Brand?.BrandName</td>
                <td>@item.Category?.CategoryName</td>
                <td><img src="~/images/@item.Image" width="80" /></td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductID">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

