@model My_Web.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <h2>@Model.ProductName</h2>

    <div class="row">
        <div class="col-md-5">
            <img src="~/images/products/@Model.Image" class="img-fluid rounded border" alt="@Model.ProductName" />
        </div>
        <div class="col-md-7">
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
            <p><strong>Số lượng còn:</strong> @Model.Quantity</p>

            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
            </form>

            <form asp-action="BuyNow" asp-controller="Order" method="post" class="mt-2">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <button type="submit" class="btn btn-success">Mua ngay</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
