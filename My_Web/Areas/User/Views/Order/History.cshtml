@model List<My_Web.Models.Order>

<h2>Lịch sử đơn hàng</h2>
<table>
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
