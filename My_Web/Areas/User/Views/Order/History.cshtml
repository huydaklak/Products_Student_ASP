@model List<My_Web.Models.Order>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container">
    <h4 class="mb-4 fw-bold text-primary">Lịch sử đơn hàng của bạn</h4>

    @if (Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.OrderID</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.TotalAmount.ToString("N0") đ</td>
                        <td>@order.Status ?? "Đang xử lý"</td>
                        <td>
                            <a asp-area="User" asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderID"
                               class="btn btn-sm btn-outline-primary">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">Bạn chưa có đơn hàng nào.</div>
    }
</div>
