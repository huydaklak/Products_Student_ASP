@model My_Web.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-4">
    <h2 class="mb-3">Thông tin cá nhân</h2>

    <div class="card p-3">
        <p><strong>Họ tên:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Vai trò:</strong> @Model.Role</p>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("EditProfile", "Account")" class="btn btn-warning">Chỉnh sửa</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
